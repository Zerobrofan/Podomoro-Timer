{
    "manifest_version": 2,
    "name": "Pomodoro Timer",
    "version": "1.0",
    "description": "A Pomodoro timer extension for Google Chrome",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "icon128.png"
    },
    "permissions": [
        "alarms"
    ]
}